<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.buildmlearntoolkit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="com.buildmlearn.application.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/buildmlearn_toolkit_128"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.buildmlearn.base.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name="com.buildmlearn.activities.TemplateActivity"
            android:label="@string/title_activity_template" >
        </activity>
        <activity
            android:name=".ContentActivity"
            android:label="@string/title_activity_content" >
        </activity>
    </application>

</manifest>
